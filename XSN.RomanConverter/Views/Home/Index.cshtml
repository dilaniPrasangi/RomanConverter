@model XPS.RomanConverter.Models.ConverterModel

@{
    ViewData["Title"] = "Converter";
}

<h1>Roman Number Converter</h1>


<hr />
<form asp-action="Index">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-1 align-items-end">
            <div class="form-group">
                <input type="submit" value=">>" class="btn btn-primary" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="RomanNumber" class="control-label"></label>
                <input asp-for="RomanNumber" class="form-control" disabled="disabled" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {

            $("#Number").on("input", function () {
                $("#RomanNumber").val("");
            });
        });
    </script>
}
